{
    "name": "carrepair/website",
    "description": "A modern, responsive website for Car Repair auto service shop",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpunit/php-code-coverage": "^9.2"
    },
    "autoload": {
        "files": [
            "includes/functions.php",
            "includes/init.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
} 